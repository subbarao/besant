<ul class="timinigs" data-role="listview" data-inset="true"> 
	<li> 
  <h3> <%= link_to "showtime", closest_movie_path(@movie) %></h3> 
	</li> 
</ul>

<div data-role="navbar" data-theme="e" data-inset="true"> 
	<ul> 
  <li>
    <%=  link_to "Positive", positive_movie_path(@movie), 
    "data-icon"=>"gear","data-iconpos"=>"top","data-theme"=>"b" %>
  </li>
  <li>
    <%=  link_to "Mixed", mixed_movie_path(@movie), 
    "data-icon"=>"gear","data-iconpos"=>"top","data-theme"=>"b" %>
