	</ul> 
</div>

<%= image_tag(@movie.cover_image.thumb("300x225").url)  %>

<ul data-role="listview" data-inset="true"> 
  <% @tweets.each do | tweet | %>
			<li> 
        <%= image_tag tweet.profile_image_url %>
        <h3> <%= link_to auto_link(tweet.text),  tweet.twitter_url, :rel=>"external" %></h3> 
			</li> 
  <% end %>
</ul>
